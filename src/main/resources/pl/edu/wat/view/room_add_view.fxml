<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<fx:root type="javafx.scene.layout.AnchorPane"
         xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="pl.edu.wat.controllers.RoomAddController">
    <Label text="%rooms.table.col1" AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="150.0"/>
    <TextField fx:id="roomNumberField" onKeyPressed="#isValid" AnchorPane.topAnchor="50.0" AnchorPane.rightAnchor="150.0" AnchorPane.leftAnchor="150.0"/>
    <Label text="%rooms.table.col2" AnchorPane.topAnchor="80.0" AnchorPane.leftAnchor="150.0"/>
    <TextField fx:id="numberOfPersonsField" onKeyPressed="#isValid" AnchorPane.topAnchor="100.0" AnchorPane.rightAnchor="150.0" AnchorPane.leftAnchor="150.0"/>
    <Label text="%rooms.table.col3" AnchorPane.topAnchor="130.0" AnchorPane.leftAnchor="150.0"/>
    <TextField fx:id="numberOfBedsField" onKeyPressed="#isValid" AnchorPane.topAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.leftAnchor="150.0"/>
    <Label text="%room.add.text1" AnchorPane.topAnchor="180.0" AnchorPane.leftAnchor="150.0"/>
    <TextField fx:id="pricePerNightField" onKeyPressed="#isValid" AnchorPane.topAnchor="200.0" AnchorPane.rightAnchor="150.0" AnchorPane.leftAnchor="150.0"/>
    <Button fx:id="button" text="%button.add" onAction="#save"/>
</fx:root>
